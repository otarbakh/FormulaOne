<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lewis hamilton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"/>


    <TextView
        android:id="@+id/tv_driverAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_driverName"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_driverPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="155pts"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_driverAge"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"/>


    <TextView
        android:id="@+id/tv_driverNationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="England"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_driverPoint"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_driverNationality"

        android:layout_marginTop="25dp"
        android:background="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>